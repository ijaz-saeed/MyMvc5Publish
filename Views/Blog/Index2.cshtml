@model IEnumerable<WebMvc5.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")    
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td data-toggle="tooltip"  title="@item.Url">
         @Html.ActionLink(string.IsNullOrEmpty(item.Url) ? "<NA>" : item.Url, "Edit", new { id = item.Id }, new  { @class="ajaxLoad" }) 
        </td>
        <td data-toggle="tooltip" title="@item.Description">
            @Html.Partial("_stringEllipsis", item.Description, new ViewDataDictionary { })
        </td>
        <td>
           <a href="@Url.Action("Edit", new { id = item.Id })" class="ajaxLoad" > <span class="glyphicon glyphicon-pencil"></span> </a> |
          <a href="@Url.Action( "Details", new { id=item.Id })" class="ajaxLoad"> <span class="glyphicon glyphicon-eye-open"></span> </a>   |
            <a href="@Url.Action( "Delete", new { id=item.Id })" class="ajaxLoad"> <span class="glyphicon glyphicon-remove"></span> </a> 
        </td>
    </tr>
}

</table>
