@model IEnumerable<WebMvc5.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")    
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td title="@item.Url">
         @Html.ActionLink(item.Url,"Edit", new { id = item.Id }) 
        </td>
        <td title="@item.Description">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
           <a href="@Url.Action("Edit", new { id = item.Id })" class="glyphicon glyphicon-pencil"></a> |
          <a href="@Url.Action( "Details", new { id=item.Id })" class="glyphicon glyphicon-eye-open"></a>   |
            <a href="@Url.Action( "Delete", new { id=item.Id })" class="glyphicon glyphicon-remove"></a> 
        </td>
    </tr>
}

</table>
